{# src/AppBundle/Resources/views/blog/blog.html.twig #}
{% extends 'AppBundle::base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block css %}
    {{ parent() }}
   
{% endblock %}

{% block body %}

    <article>
        <h1>{{ post.title }}</h1>
        <time datetime="{{ post.created|date('c') }}">{{ post.created|date('d F y') }}</time>
        <figure>
           <img src="{{ asset(['bundles/app/images/', post.image]|join) }}" alt="{{ post.title }}">
        </figure>
        <p>{{ post.author }}</p>
        <p>{{ post.text }}</p>
        <a href="{{ path('blog') }}">к списку статей</a>
    </article>

    {{ dump(comments) }}

{% endblock %}