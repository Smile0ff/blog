{# src/AppBundle/Resources/forms/fields.html.twig #}

{%- block form_errors -%}
    
    {% if errors|length == 1 %}
        <div class="error-holder">
            <span>{{ errors.0.message }}</span>
        </div>
    {% elseif errors|length > 1 %}
        <ul>
            {%- for error in errors -%}
                <li>{{ error.message }}</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}

{%- endblock form_errors -%}